<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-dark table-striped table-hover table-bordered bg-dark">
  <thead>
    <tr>
      <th>Task</th>
      <th>Date</th>
      <th>Description</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <% if task.user == current_user %>

      <tr>
        <td><%= task.tname %></td>
        <td><%= task.date %></td>
        <td><%= task.desc %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'Show', task, class:"btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Done', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-success btn-sm" %></td>
      </tr>
    <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class:"btn btn-success" %>
